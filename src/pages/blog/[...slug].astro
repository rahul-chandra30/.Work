---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { render } from 'astro:content';
import Meeting from '../../components/Meeting.jsx';
import Task from '../../components/Task.jsx';
import Blocker from '../../components/Blocker.jsx';
import ActionItem from '../../components/ActionItem.jsx';
import StandUpSummary from '../../components/StandUpSummary.jsx';
import Progress from '../../components/Progress.jsx';
import Callout from '../../components/Callout.jsx';
import CodeSnippet from '../../components/CodeSnippet.jsx';
import Image from '../../components/Image.jsx';
import Quote from '../../components/Quote.jsx';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data}>
  <Content components={{ Meeting, Task, Blocker, ActionItem, StandUpSummary, Progress, Callout, CodeSnippet, Image, Quote }} />
</BlogPost>